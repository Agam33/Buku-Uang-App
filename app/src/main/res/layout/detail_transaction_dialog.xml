<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_margin="8dp"
        android:id="@+id/ib_close_dialog"
        android:src="@drawable/baseline_close_24"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null" />

    <ImageButton
        android:layout_margin="8dp"
        android:layout_toStartOf="@id/ib_edit_dialog"
        android:id="@+id/ib_delete_dialog"
        android:background="@null"
        android:src="@drawable/baseline_dangerous_24"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/ib_edit_dialog"
        android:background="@null"
        android:src="@drawable/outline_edit_24"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_below="@id/ib_edit_dialog"
        android:id="@+id/iv_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/txt_empty" />


    <com.google.android.material.textview.MaterialTextView
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ib_edit_dialog"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/iv_icon"
        android:text="@string/txt_empty"
        android:textSize="24sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_current_date"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:text="@string/txt_empty"
        android:textSize="16sp" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_current_date"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <com.google.android.material.textview.MaterialTextView
        android:layout_below="@id/divider"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="@string/txt_empty"
        android:id="@+id/tv_transaction_type"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
        android:id="@+id/tv_ic1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/tv_transaction_type"
        android:layout_marginStart="8dp"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textStyle="italic"
        android:id="@+id/tv_ic2"
        android:textSize="16sp"
        android:layout_below="@id/tv_ic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:text="@string/txt_empty"
        android:textSize="14sp"
        android:id="@+id/tv_desc"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/tv_ic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>