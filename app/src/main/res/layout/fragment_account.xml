<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.ra.budgetplan.presentation.viewmodel.AccountViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.account.AccountFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <com.google.android.material.appbar.CollapsingToolbarLayout
               app:layout_scrollFlags="scroll|enterAlways"
               android:fitsSystemWindows="true"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.card.MaterialCardView
                   style="@style/Widget.App.Overall.IET.Card"
                   app:cardElevation="0dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <RelativeLayout
                       android:paddingStart="8dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       tools:ignore="RtlSymmetry">

                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tv_title_expense"
                           android:text="@string/title_expense"
                           android:textSize="14sp"
                           android:textAppearance="@style/TextAppearance.AppCompat.Title"
                           android:layout_marginStart="4dp"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:textSize="14sp"
                           android:layout_toEndOf="@id/tv_title_expense"
                           android:id="@+id/tv_expense"
                           android:text="@{vm.totalExpense}"
                           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                           android:textColor="@color/red_400"
                           android:layout_marginStart="8dp"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:textSize="14sp"
                           android:layout_below="@id/tv_title_expense"
                           android:id="@+id/tv_title_income"
                           android:text="@string/title_income"
                           android:textAppearance="@style/TextAppearance.AppCompat.Title"
                           android:layout_marginStart="4dp"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:textSize="14sp"
                           android:layout_toEndOf="@id/tv_title_expense"
                           android:layout_below="@id/tv_title_expense"
                           android:id="@+id/tv_income"
                           android:text="@{vm.totalIncome}"
                           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                           android:textColor="@color/green_40"
                           android:layout_marginStart="8dp"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:textSize="14sp"
                           android:layout_below="@id/tv_title_income"
                           android:id="@+id/tv_title_total"
                           android:text="@string/title_total"
                           android:textAppearance="@style/TextAppearance.AppCompat.Title"
                           android:layout_marginStart="4dp"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:textSize="14sp"
                           android:layout_toEndOf="@id/tv_title_expense"
                           android:layout_below="@id/tv_income"
                           android:id="@+id/tv_total"
                           android:text="@{vm.totalAccountMoney}"
                           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                           android:textColor="@color/green_40"
                           android:layout_marginStart="8dp"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>
               </com.google.android.material.card.MaterialCardView>

           </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.divider.MaterialDivider
                app:tabMode="fixed"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_account"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            style="@style/Widget.App.Global.FAB"
            android:src="@drawable/baseline_add_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/fab_transaction_desc" />

        <include
            android:id="@+id/empty_layout"
            layout="@layout/empty_layout"/>

        <androidx.recyclerview.widget.RecyclerView
            app:hide="@{vm.rvAccountState}"
            android:id="@+id/rv_account"
            tools:itemCount="15"
            tools:listitem="@layout/item_rv_accounts"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>