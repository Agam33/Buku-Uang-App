<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView

        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/iv_account"
                android:src="@drawable/outline_savings_36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_account"
                android:text="@string/txt_account_saving"
                android:layout_toEndOf="@id/iv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_marginStart="4dp"
                android:id="@+id/tv_money"
                android:layout_below="@id/iv_account"
                android:text="@string/txt_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/sp_option_account"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-8dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/more_dots_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>