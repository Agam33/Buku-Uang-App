    <style name="ShapeAppearance.Budget.App.Icon.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
<!-- End Icon Button -->

