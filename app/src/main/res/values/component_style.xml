<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- FAB Custom -->
    <style name="Widget.App.Global.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Global.FAB</item>
    </style>

    <style name="ThemeOverlay.Global.FAB" parent="">
        <item name="colorSecondary">@color/army_green_20</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
<!-- End FAB custom-->

<!--Tab layout-->
    <style name="Widget.App.Transaction.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Transaction.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.Transaction.TabLayout" parent="">
        <item name="colorPrimary">@color/indigo_50</item>
    </style>
<!-- End Tab layout-->

<!-- Card Overall Income Expense Total -->
    <style name="Widget.App.Overall.IET.Card" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Overall.IET.Card</item>
    </style>

    <style name="ThemeOverlay.App.Overall.IET.Card" parent="">

    </style>
<!-- End Overall Income Expense Total -->

<!-- Collapsing Toolbar  -->
    <style name="Widget.App.CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:background">@color/white</item>
    </style>
<!-- End Collapsing Toolbar -->


<!-- Toggle Button -->
    <style name="Widget.Budget.App.Category.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Budget.App.Category.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Budget.App.Category</item>
    </style>

    <style name="TextAppearance.Budget.App.Category" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ShapeAppearance.Budget.App.Category.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
<!-- End Toggle Button -->

<!-- Dialog -->
    <style name="Widget.App.Dialog.Rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Dialog.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
<!-- End Dialog-->
</resources>